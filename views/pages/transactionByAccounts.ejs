<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
  <!-- Navbar -->
  <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur"
    data-scroll="true">
    <div class="container-fluid py-1 px-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
          <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="javascript:;">Pages</a></li>
          <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Account Name</li>
        </ol>
        <h6 class="font-weight-bolder mb-0">Account Name</h6>
      </nav>
      <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4 d-flex align-items-center" id="navbar">
        <div class="ms-md-auto pe-md-3 d-flex align-items-center">
          <div class="input-group input-group-outline">
          </div>
        </div>
        <ul class="navbar-nav  justify-content-end">
          <li class="nav-item d-flex align-items-center">
          </li>
          <%- include('partials/logout') -%>
          <li class="nav-item px-3 d-flex align-items-center">
            <a href="javascript:;" class="nav-link text-body p-0">
            </a>
          </li>
          <li class="nav-item dropdown pe-2 d-flex align-items-center">
            <a href="javascript:;" class="nav-link text-body p-0" id="dropdownMenuButton" data-bs-toggle="dropdown"
              aria-expanded="false">
            </a>

          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- End Navbar -->
  <div class="row container mx-auto">
    <div class="col-12">
      <% if (accounts){ %>
        <% for(let i = 0; i < accounts.length; i++){ %>
      <div class="card" style="margin-bottom: 50px;">
        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
          <div class="bg-gradient-primary shadow-primary border-radius-lg pt-3 pb-3 px-3 d-flex justify-content-between">
            <h6 class="text-white text-capitalize d-flex align-items-center mb-0 mx-3"><%= accounts[i].accountName %></h6>
          </div>
        </div>
        <div class="card-body pt-4 p-3">
          <% if (accounts[i].totalTransactions){ %>
            <ul class="list-group">
              <% for(let j=0; j < accounts[i].totalTransactions.length ; j++){ %>
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <img src="https://api.dicebear.com/5.x/adventurer/svg?backgroundColor=b6e3f4,c0aede,d1d4f9"
                      class="avatar avatar-md me-3 border-radius-lg" alt="user1" />
                    <div class="d-flex flex-column">
                      <h6 class="mb-1 text-dark text-sm">
                        <%= accounts[i].totalTransactions[j].description %>
                      </h6>
                      <span class="text-xs">
                        <%= accounts[i].totalTransactions[j].userId.username %>
                      </span>
                      <span class="text-xxs text-danger">
                        <%= accounts[i].totalTransactions[j].transactionType %>
                      </span>
                      <span class="text-xxs">27 March 2020, at 12:30 PM</span>
                    </div>
                  </div>
                  <div class="d-flex align-items-center text-danger text-gradient text-sm font-weight-bold">
                    â‚¹ <%= accounts[i].totalTransactions[j].amount %>
                  </div>
                </li>
                <% } %>
            </ul>
            <% } else { %>
              <div></div>
              <% }%>

        </div>
      </div>
      <% } %>
      <% }else{ %>
        <div></div>
        <% } %>
    </div>
  </div>
</main>